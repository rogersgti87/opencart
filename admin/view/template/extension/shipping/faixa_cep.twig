{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-faixa_cep" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %} 
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                 {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %} 
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %} 
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-faixa_cep" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-3 control-label">{{ entry_group_title }}</label>
                        <div class="col-md-9">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-text-width"></i></div>
                                <input type="text" name="shipping_faixa_cep_group_title" value="{{ shipping_faixa_cep_group_title }}" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">{{ entry_status }}</label>
                        <div class="col-md-9">
                            <select name="shipping_faixa_cep_status" class="form-control">
                                {% if shipping_faixa_cep_status %} 
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                {% else %}   
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                 {% endif %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">{{ entry_sort_order }}</label>
                        <div class="col-md-9">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-sort-numeric-asc"></i></div>
                                <input type="text" name="shipping_faixa_cep_sort_order" value="{{ shipping_faixa_cep_sort_order }}" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <h3>{{ text_interval }}</h3>
                    <div class="alert alert-info" role="alert">{{ text_interval_info }}</div>
                    {% if error_faixa_cep_interval %} 
                        <p class="alert alert-danger">{{ error_faixa_cep_interval }}</p>
                    {% endif %} 
                    <table id="faixa_cep" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th width="" class="text-left">{{ entry_title }}</th>
                                <th width="15%" class="text-left">{{ entry_total }}</th>
                                <th width="15%" class="text-left">{{ entry_cep }}</th>
                                <th width="15%" class="text-left">{{ entry_cost }}</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% set row = 1 %} 
                            {% for interval in shipping_faixa_cep_interval %} 
                                <tr id="faixa_cep-row{{ interval.key }}">
                                    <td>{{ row }}</td>
                                    <td class="text-left"><div class="input-group"><div class="input-group-addon"><i class="fa fa-text-width"></i></div><input type="text" name="shipping_faixa_cep_interval[{{ interval.key }}][title]" value="{{ interval.title }}" size="50" class="form-control"></div></td>
                                    <td class="text-left"><div class="input-group"><div class="input-group-addon"><i class="fa">{{ currency_simbol }}</i></div><input type="text" name="shipping_faixa_cep_interval[{{ interval.key }}][order_total]" size="8" value="{{ interval.order_total }}" class="form-control"></div></td>
                                    <td class="text-left"><input type="text" name="shipping_faixa_cep_interval[{{ interval.key }}][cep]" value="{{ interval.cep }}" class="form-control"></td>
                                    <td class="text-right"><div class="input-group"><div class="input-group-addon"><i class="fa">{{ currency_simbol }}</i></div><input type="text" name="shipping_faixa_cep_interval[{{ interval.key }}][cost]" value="{{ interval.cost }}" size="8" class="form-control"></div></td>
                                    <td class="text-left"><a onclick="$('#faixa_cep-row{{ interval.key }}').remove();" class="btn btn-danger">{{ button_remove }}</a></td>
                                </tr>
                                {% set row = row + 1 %} 
                             {% endfor %}
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5"></td>
                                <td class="text-left"><a onclick="addCEP();" class="btn btn-success">{{ button_add }}</a></td>
                            </tr>
                        </tfoot>
                    </table>
                </form>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript"><!--
    function addCEP() {
        var token = Math.random().toString(36).substr(2);

        html = '  <tr id="faixa_cep-row' + token + '">';
        html += '    <td>' + ($('tbody tr').length + 1) + '</td>';
        html += '    <td class="text-left"><div class="input-group"><div class="input-group-addon"><i class="fa fa-text-width"></i></div><input type="text" name="shipping_faixa_cep_interval[' + token + '][title]" value="" size="50" class="form-control"></div></td>';
        html += '    <td class="text-left"><div class="input-group"><div class="input-group-addon"><i class="fa">{{ currency_simbol }}</i></div><input type="text" name="shipping_faixa_cep_interval[' + token + '][order_total]" value="" size="8" class="form-control"></div></td>';
        html += '    <td class="text-left"><input type="text" name="shipping_faixa_cep_interval[' + token + '][cep]" value="" class="form-control"></td>';
        html += '    <td class="text-right"><div class="input-group"><div class="input-group-addon"><i class="fa">{{ currency_simbol }}</i></div><input type="text" name="shipping_faixa_cep_interval[' + token + '][cost]" value="" size="8" class="form-control"></div></td>';
        html += '    <td><a onclick="$(\'#faixa_cep-row' + token + '\').remove();" class="btn btn-danger">{{ button_remove }}</a></td>';
        html += '  </tr>';

        $('#faixa_cep tbody').append(html);
    }
    //--></script>
{{ footer }}